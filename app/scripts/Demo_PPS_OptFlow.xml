<application>
    <name>periPersonalSpace Demo with Optical Flow</name>

    <dependencies>
    </dependencies>

    <module>
        <name>motionCUT</name>
        <parameters>--recogThres 0.015 --blobMinSizeThres 20 --framesPersistence 3 --cropSize</parameters>
        <node>icub-b1</node>
        <stdio></stdio>
    </module>
    <module>
        <name>templatePFTracker</name>
        <parameters></parameters>
        <node>icub-b2</node>
        <stdio></stdio>
    </module>
    <module>
        <name>SFM</name>
        <parameters></parameters>
        <node>icub13</node>
        <stdio></stdio>
    </module>
    <module>
        <name>visuoTactileRF</name>
        <parameters></parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>visuoTactileWrapper</name>
        <parameters></parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>ultimateTracker</name>
        <parameters></parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>demoAvoidance</name>
        <parameters></parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /vtRF/left --RefreshTime 33 --x 0 --y 0 --w 400 --h 400</parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /vtRF/right --RefreshTime 33 --x 420 --y 0 --w 400 --h 400</parameters>
        <node>icub15</node>
        <stdio></stdio>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /motionCUT_viewer --RefreshTime 33 --x 960 --y 380 --w 320 --h 240 --compact</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /templatePFTracker_viewer --RefreshTime 33 --x 1280 --y 80 --w 320 --h 240 --compact</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /dispViewer --RefreshTime 33 --x 1600 --y 80 --w 320 --h 240 --compact</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from left_forearm_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 0 --ypos 690 --width 300 --height 300</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from left_hand_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 320 --ypos 690 --width 300 --height 300</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from right_forearm_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 640 --ypos 690 --width 300 --height 300</parameters>
        <node>icub13</node>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from right_hand_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 960 --ypos 690 --width 300 --height 300</parameters>
        <node>icub13</node>
    </module>

    <connection>
        <from>/SFM/disp:o</from>
        <to>/dispViewer</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/ultimateTracker/gui:o</from>
        <to>/iCubGui/objects</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/templatePFTracker/left/image:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/templatePFTracker/left/image:o</from>
        <to>/templatePFTracker_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/visuoTactileRF/imageL:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/visuoTactileRF/imageR:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/motionCUT/img:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/motionCUT/img:o</from>
        <to>/motionCUT_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/motionCUT/data:o</from>
        <to>/visuoTactileWrapper/motionCUT:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileWrapper/events:o</from>
        <to>/visuoTactileRF/events:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skin_events:o</from>
        <to>/avoidance/data:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiForearmL:o</from>
        <to>/vtRFSkinGui/left_forearm:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiForearmR:o</from>
        <to>/vtRFSkinGui/right_forearm:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiHandL:o</from>
        <to>/vtRFSkinGui/left_hand:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiHandR:o</from>
        <to>/vtRFSkinGui/right_hand:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileRF/imageL:o</from>
        <to>/vtRF/left</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileRF/imageR:o</from>
        <to>/vtRF/right</to>
        <protocol>udp</protocol>
    </connection>
</application>
