<application>
    <name>periPersonalSpace Demo with Stereo and Optical Flow</name>

    <dependencies>
    </dependencies>

    <module>
        <name>motionCUT</name>
        <parameters>--recogThres 0.015 --blobMinSizeThres 20 --framesPersistence 3 --cropRadius 20</parameters>
        <node>icub-b1</node>
        <stdio></stdio>
        <tag>motionCUT</tag>
    </module>
    <module>
        <name>templatePFTracker</name>
        <parameters></parameters>
        <node>icub-b2</node>
        <stdio></stdio>
        <tag>templatePFTracker</tag>
    </module>
    <module>
        <name>SFM</name>
        <parameters></parameters>
        <node>icub16</node>
        <stdio></stdio>
        <tag>SFM</tag>
    </module>
    <module>
        <name>visuoTactileRF</name>
        <parameters></parameters>
        <node>icub16</node>
        <stdio></stdio>
        <tag>visuoTactileRF</tag>
    </module>
    <module>
        <name>visuoTactileWrapper</name>
        <parameters></parameters>
        <node>icub16</node>
        <stdio></stdio>
        <tag>visuoTactileWrapper</tag>
    </module>
    <module>
        <name>demoAvoidance</name>
        <parameters></parameters>
        <node>icub16</node>
        <stdio></stdio>
        <tag>demoAvoidance</tag>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /vtRF/left --RefreshTime 33 --x 0 --y 0 --w 400 --h 400</parameters>
        <node>icub16</node>
        <stdio></stdio>
        <tag>yarpview</tag>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /vtRF/right --RefreshTime 33 --x 420 --y 0 --w 400 --h 400</parameters>
        <node>icub16</node>
        <stdio></stdio>
        <tag>yarpview</tag>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /motionCUT_viewer --RefreshTime 33 --x 920 --y 300 --w 400 --h 400</parameters>
        <node>icub12</node>
        <tag>motionCUT_viewer</tag>
    </module>
    <module>
        <name>yarpview</name>
        <parameters>--name /templatePFTracker_viewer --RefreshTime 33 --x 1320 --y 300 --w 400 --h 400</parameters>
        <node>icub12</node>
        <tag>templatePFTracker_viewer</tag>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from left_forearm_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 0 --ypos 640 --width 350 --height 350</parameters>
        <node>icub12</node>
        <tag>iCubSkinGui_left_forearm</tag>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from left_hand_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 370 --ypos 640 --width 350 --height 350</parameters>
        <node>icub12</node>
        <tag>iCubSkinGui_left_hand</tag>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from right_forearm_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 740 --ypos 640 --width 350 --height 350</parameters>
        <node>icub12</node>
        <tag>iCubSkinGui_right_forearm</tag>
    </module>
    <module>
        <name>iCubSkinGui</name>
        <parameters> --context periPersonalSpace --from right_hand_vtRF.ini --name /vtRFSkinGui --useCalibration --xpos 1110 --ypos 640 --width 350 --height 350</parameters>
        <node>icub12</node>
        <tag>iCubSkinGui_right_hand</tag>
    </module>

    <connection>
        <from>/ultimateTracker/gui:o</from>
        <to>/iCubGui/objects</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/templatePFTracker/left/image:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/templatePFTracker/left/image:o</from>
        <to>/templatePFTracker_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/visuoTactileRF/imageL:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/right/out</from>
        <to>/visuoTactileRF/imageR:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/icub/camcalib/left/out</from>
        <to>/motionCUT/img:i</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/motionCUT/img:o</from>
        <to>/motionCUT_viewer</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/motionCUT/data:o</from>
        <to>/visuoTactileWrapper/motionCUT:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileWrapper/events:o</from>
        <to>/visuoTactileRF/events:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skin_events:o</from>
        <to>/avoidance/data:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiForearmL:o</from>
        <to>/vtRFSkinGui/left_forearm:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiForearmR:o</from>
        <to>/vtRFSkinGui/right_forearm:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiHandL:o</from>
        <to>/vtRFSkinGui/left_hand:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
    <from>/visuoTactileRF/skinGuiHandR:o</from>
        <to>/vtRFSkinGui/right_hand:i</to>
        <protocol>tcp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileRF/imageL:o</from>
        <to>/vtRF/left</to>
        <protocol>udp</protocol>
    </connection>
    <connection>
        <from>/visuoTactileRF/imageR:o</from>
        <to>/vtRF/right</to>
        <protocol>udp</protocol>
    </connection>
</application>
